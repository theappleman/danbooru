{

  "manifest_version": 2,
  "name": "danbooru",
  "version": "0.0.1",

  "description": "downloads images from danbooru sites",

  "permissions": ["downloads","storage"],

  "content_scripts": [
    {
      "matches": [
              "*://*/post/show/*",
              "*://*/posts/*"
      ],
      "js": ["danbooru.js"]
    },
    {
      "matches": [
              "*://gelbooru.com/*",
              "*://safebooru.org/*"
      ],
      "js": ["anybooru.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "repository": "https://github.com/theappleman/danbooru",

  "bugs": "https://github.com/theappleman/danbooru/issues",

  "license": "MIT",

  "dependencies": {
    "web-ext": "^1.8.1"
  },

  "scripts": {
    "run": "web-ext run",
    "build": "web-ext build"
  }

}
